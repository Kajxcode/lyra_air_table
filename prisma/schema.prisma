generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* Next auth */

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  bases         Base[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/* Airtable */

model Base {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  tables    Table[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Table {
  id        String   @id @default(cuid())
  baseId    String
  base      Base     @relation(fields: [baseId], references: [id])
  name      String
  position  Int      @default(0)
  columns   Column[]
  rows      Row[]
  views     View[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([baseId])
}

enum ColumnType {
  TEXT
  NUMBER
}

model Column {
  id           String        @id @default(cuid())
  tableId      String
  table        Table         @relation(fields: [tableId], references: [id])
  name         String
  type         ColumnType
  position     Int
  isHidden     Boolean       @default(false)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  cells        Cell[]
  filters      ViewFilter[]
  sorts        ViewSort[]
  columnStates ColumnState[]

  @@index([tableId])
}

model Row {
  id        String   @id @default(cuid())
  tableId   String
  table     Table    @relation(fields: [tableId], references: [id])
  index     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cells     Cell[]

  @@index([tableId, index])
}

model Cell {
  id          String  @id @default(cuid())
  rowId       String
  columnId    String
  row         Row     @relation(fields: [rowId], references: [id])
  column      Column  @relation(fields: [columnId], references: [id])
  valueText   String?
  valueNumber Float?

  @@unique([rowId, columnId])
  @@index([columnId, valueText])
  @@index([columnId, valueNumber])
}

model View {
  id           String        @id @default(cuid())
  tableId      String
  table        Table         @relation(fields: [tableId], references: [id])
  name         String
  searchQuery  String?
  filters      ViewFilter[]
  sorts        ViewSort[]
  columnStates ColumnState[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tableId])
}

enum FilterOperator {
  CONTAINS
  NOT_CONTAINS
  EQUALS
  NOT_EQUALS
  IS_EMPTY
  IS_NOT_EMPTY
  GREATER_THAN
  LESS_THAN
}

model ViewFilter {
  id          String         @id @default(cuid())
  viewId      String
  view        View           @relation(fields: [viewId], references: [id])
  columnId    String
  column      Column         @relation(fields: [columnId], references: [id])
  operator    FilterOperator
  valueText   String?
  valueNumber Float?

  @@index([viewId])
}

model ViewSort {
  id        String        @id @default(cuid())
  viewId    String
  view      View          @relation(fields: [viewId], references: [id])
  columnId  String
  column    Column        @relation(fields: [columnId], references: [id])
  direction SortDirection
  priority  Int           @default(0)

  @@index([viewId])
}

enum SortDirection {
  ASC
  DESC
}

model ColumnState {
  id       String  @id @default(cuid())
  viewId   String
  view     View    @relation(fields: [viewId], references: [id])
  columnId String
  column   Column  @relation(fields: [columnId], references: [id])
  isHidden Boolean @default(false)

  @@unique([viewId, columnId])
}
